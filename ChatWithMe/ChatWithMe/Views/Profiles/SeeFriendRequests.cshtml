@model FriendRequestListViewModel

@{
    ViewData["Title"] = $"FriendRequests";
}

<h1 class=" text-center">Friend requests:</h1>

<hr>

@if (Model.FriendRequests.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Profile picture</th>
                <th scope="col">FirstName</th>
                <th scope="col">LastName</th>
                <th scope="col">Sent at date</th>
            </tr>
        </thead>
        @foreach (var friendRequest in Model.FriendRequests)
        {
            <tbody>
                <tr>
                    <th scope="row"><img src="@friendRequest.FromUserProfileImage" style="width:60px; height:40px;"/></th>
                    <td>@friendRequest.FromUserFirstName</td>
                    <td>@friendRequest.FromUserLastName</td>
                    <td>@friendRequest.CreatedOn</td>
                </tr>
            </tbody>
        }
    </table>
}
else
{
    <div class="mt-5 mb-5">
        <h3 class="text-center text-danger">There is no friend requests yet!</h3>

    </div>
    <div class="mt-2 mb-5 text-center">
        <img src="~/Images/noFriendRequests.jpg" style="width:300px; height:310px" />
    </div>
}

<hr>
