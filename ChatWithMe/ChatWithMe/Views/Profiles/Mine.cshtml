@model MyProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}

<div class="row mb-5">
    <div class="col-md-4">
        <img src="@Model.CustomPofilePicture" style="width:280px; height:250px;" class="img-thumbnail">
    </div>
    <div class="col-md-8">
        <h2 class="text-center">@Model.FirstName @Model.LastName</h2>
        <div class="mt-3 id=" ProfilePictureContainer"">
            <p class="text-center"><strong>Gender:</strong> @Model.Gender</p>
            <p class="text-center"><strong>Total Friends:</strong> @Model.Friends.Count()</p>
            <p class="text-center"><strong>Total friend requests:</strong> @Model.FriendRequestsFromUsers.Count()</p>
            <p class="text-center"><strong>Total sent requests:</strong> @Model.FriendRequestToUsers.Count()</p>
        </div>
    </div>
</div>

<hr>

<h2 class="mt-5">Friends:</h2>
<table class="table table-striped table-dark mb-5">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First name</th>
            <th scope="col">Last name</th>
            <th>Link to profile</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var friend in Model.Friends)
        {
            <tr>
                <th scope="row">@friend.Id</th>
                <td>@friend.FirstName</td>
                <td>@friend.LastName</td>
                <td><button class="btn btn-info">Go to profile</button></td>
            </tr>
        }
    </tbody>
</table>

<h2 class="mt-5">Friend Requests:</h2>
<table class="table table-striped table-dark mb-5">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First name</th>
            <th scope="col">Last name</th>
            <th>Link to profile</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var friend in Model.FriendRequestsFromUsers)
        {
            <tr>
                <th scope="row">@friend.Id</th>
                <td>@friend.FirstName</td>
                <td>@friend.LastName</td>
                <td><button class="btn btn-danger">Accept request</button></td>
            </tr>
        }
    </tbody>
</table>
<hr>

